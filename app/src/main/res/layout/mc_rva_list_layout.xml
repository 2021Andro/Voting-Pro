<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:backgroundTint="#415760"
    android:layout_margin="5dp"
    android:elevation="10dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="@dimen/google_1x"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivCunt_LL"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/voting_pro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/tvName_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="124dp"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tvStatus_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="155dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/status"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_subject"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tvTodaySubject_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Subject"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="160dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvLikeVote_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="0"
            android:drawableStart="@drawable/va_like"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            />


        <TextView
            android:id="@+id/tvNeutralVote_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:text="0"
            android:drawableStart="@drawable/va_neutral"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tvDislikeVote_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="0"
            android:drawableStart="@drawable/va_dislike"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>